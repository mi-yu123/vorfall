<div class="min-h-screen bg-black text-white p-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-2xl mb-4"><%= @room.title %></h1>
      <div class="text-gray-300 whitespace-pre-line">
        <%= @room.description %>
      </div>
    </div>

    <% if @room.puzzle? && @room.puzzle.present? %>
      <%= render 'puzzles/form', puzzle: @room.puzzle %>
    <% else %>
      <div class="space-y-4">
        <% @available_choices.each do |choice| %>
          <%= button_to choice.description,
              make_choice_room_path(@room),
              params: { choice_id: choice.id },
              class: "w-full bg-gray-800 hover:bg-gray-700 p-4 rounded text-left transition" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>