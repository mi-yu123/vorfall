<div class="min-h-screen w-[1280px] mx-auto bg-gray-900 text-white p-12">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-8"><%= @room.title %></h2>
    
    <div class="mb-12 text-xl leading-relaxed whitespace-pre-line">
      <%= @room.description %>
    </div>

    <% if @choices.present? %>
      <div class="space-y-6">
        <% @choices.each do |choice| %>
          <%= button_to choice[:description],
              make_choice_game_room_path(@game_state, @room, choice: choice[:description]),
              method: :post,
              class: "w-full p-4 text-xl border-2 border-white hover:bg-white hover:text-gray-900
                     transition-colors duration-300" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>